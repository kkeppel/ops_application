<h1>Listing allergens</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @allergens.each do |allergen| %>
  <tr>
    <td><%= allergen.name %></td>
    <td><%= link_to 'Show', ingredient_allergen_path(@ingredient, allergen) %></td>
    <td><%= link_to 'Edit', edit_ingredient_allergen_path(@ingredient, allergen) %></td>
    <td><%= link_to 'Destroy', ingredient_allergen_path(@ingredient, allergen), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Allergen', new_ingredient_allergen_path(@ingredient) %> | <%= link_to 'Back', root_path %>
