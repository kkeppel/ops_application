<h1>Editing vendor</h1>

<%= form_for(@vendor, :url => admin_vendor_path) do |f| %>
  <% if @vendor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vendor.errors.count, "error") %> prohibited this vendor from being saved:</h2>

      <ul>
        <% @vendor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :public_name %>
    <%= f.text_field :public_name %>
  </div>
  <div class="field">
    <%= f.label :tagline %>
    <%= f.text_area :tagline, :rows => 3 %>
  </div>
  <div class="field">
    <%= f.label :website %>
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label :bio %>
    <%= f.text_area :bio, :rows => 3 %>
  </div>
  <div class="field">
    <%= f.label :vendor_type %>
    <%= f.number_field :vendor_type %>
  </div>
  <div class="actions">
    <%= f.submit "Save Vendor", :class => "btn btn-primary" %>
  </div>
<% end %>


<%= link_to 'Show', admin_vendor_path(@vendor), :class => "btn" %> |
