<h1>Listing vendors</h1>

<table class="table table-hover">
   <thead>
    <tr>
      <th>Name</th>
      <th>Public name</th>
      <th>Tagline</th>
      <th>Website</th>
      <th>Bio</th>
      <th>Vendor type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
   </thead>
  <tbody>
    <% @vendors.each do |vendor| %>
    <tr>
      <td><%= vendor.name %></td>
      <td><%= vendor.public_name %></td>
      <td><%= vendor.tagline %></td>
      <td><%= vendor.website %></td>
      <td><%= vendor.bio %></td>
      <td><%= vendor.vendor_type_id %></td>
      <td><%= link_to 'Manage Locations', vendor_locations_path(vendor)  %></td>
      <td><%= link_to 'Manage Contacts', vendor_contacts_path(vendor) %></td>
      <td><%= link_to 'Manage Items', vendor_items_path(vendor) %></td>
      <td><%= link_to 'Show', vendor_path(vendor) %></td>
      <td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
      <td><%= link_to 'Destroy', vendor_path(vendor), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </tbody>
<% end %>
</table>

<br />
<%=	link_to 'Back', root_path, :class => "btn"  %>
<%= link_to 'New Vendor', new_vendor_path, :class => "btn btn-primary" %>
