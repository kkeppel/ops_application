<h1>Listing meals</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Headcount</th>
    <th>Max Price</th>
	  <th>Serving Time</th>
	  <th>Active</th>
	  <th>Private</th>
	  <th>Default</th>
	  <th>Location</th>
	  <th>Meal Type</th>
	  <th>Company</th>
  </tr>

<% @meals.each do |meal| %>
  <tr>
	  <td><%= meal.name %></td>
	  <td><%= meal.headcount %></td>
	  <td><%= meal.max_price %></td>
	  <td><%= meal.serving_time %></td>
	  <td><%= meal.active %></td>
	  <td><%= meal.private %></td>
	  <td><%= meal.default %></td>
	  <td><%= meal.location.name %></td>
	  <td><%= meal.meal_type.meal_type %></td>
	  <td><%= meal.company.company_name %></td>
    <td><%= link_to 'Show', meal %></td>
    <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
    <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Meal', new_meal_path %> |
