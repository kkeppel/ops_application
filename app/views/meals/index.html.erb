<h1>Listing meals</h1>

<table class="table table-condensed">
  <tr>
    <th>Name</th>
    <th>Headcount</th>
    <th>Max Price</th>
	  <th>Serving Time</th>
	  <th>Active</th>
	  <th>Private</th>
	  <th>Default</th>
	  <th>Location</th>
	  <th>Meal Type</th>
	  <th>Company</th>
  </tr>

<% @meals.each do |meal| %>
  <tr>
	  <td><%= meal.name %></td>
	  <td><%= meal.headcount %></td>
	  <td><%= meal.max_price %></td>
	  <td><%= meal.serving_time %></td>
	  <td><%= meal.active %></td>
	  <td><%= meal.private %></td>
	  <td><%= meal.default %></td>
	  <td><%= meal.location.name %></td>
	  <td><%= meal.meal_type.name %></td>
	  <td><%= meal.company.name %></td>
    <td><%= link_to 'Edit', edit_contact_meal_path(@contact, meal) %></td>
    <td><%= link_to 'Destroy', contact_meals_path(@contact), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Back', company_contacts_path(@contact.company_id), class: "btn" %>
<%= link_to 'New Meal', new_contact_meal_path, class: "btn btn-primary" %>
