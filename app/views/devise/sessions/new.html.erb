<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %>
  <%= f.email_field :email, tabindex: 1 %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password, tabindex: 2 %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me, tabindex: 3 %> <%= f.label :remember_me, { style: "display:inline;"  } %></div>
  <% end -%>

  <div><%= f.submit "Sign in", class: "btn btn-large btn-primary", style: 'margin-top: 10px;', tabindex: 4 %></div>
<% end %>

<%= render "devise/shared/links" %>
