<h1>Listing meal_preferences</h1>

<table>
  <tr>
    <th>Percentage</th>
    <th>Meal</th>
    <th>Ingredient</th>
  </tr>

	<% @meal_preferences.each do |meal_preference| %>
	  <tr>
		  <td><%= meal_preference.percentage %></td>
		  <td><%= meal_preference.meal.name %></td>
		  <td><%= meal_preference.ingredient.name %></td>
	    <td><%= link_to 'Show', meal_preference %></td>
	    <td><%= link_to 'Edit', edit_meal_preference_path(meal_preference) %></td>
	    <td><%= link_to 'Destroy', meal_preference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	<% end %>
</table>

<br />

